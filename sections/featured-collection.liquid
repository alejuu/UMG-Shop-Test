<div class="flex flex-col items-center {{ section.settings.container_width }}">
  {%- if section.settings.title -%}
    <h2 class="text-3xl font-bold text-center mb-4 md:mb-8">{{ section.settings.title }}</h2>
  {%- endif -%}
  <div class="mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-1 px-1">
      {% for product in section.settings.featured_collection.products
        limit: section.settings.number_of_products_to_show
      %}
        {% render 'product-card', product_product: product %}
      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured Collection",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "number_of_products_to_show",
      "min": 4,
      "max": 12,
      "default": 4,
      "label": "Number of products to show"
    },
    {
      "type": "header",
      "content": "Section Settings",
      "info": "Adjust spacing for this section."
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "Section Width",
      "options": [
        {
          "value": "container mx-auto",
          "label": "Fixed Width"
        },
        {
          "value": "w-full",
          "label": "Full Width"
        }
      ],
      "default": "container mx-auto"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
